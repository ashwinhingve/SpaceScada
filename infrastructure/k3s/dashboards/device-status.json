{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "title": "WebSCADA - Device Status",
  "uid": "webscada-devices",
  "version": 1,
  "timezone": "browser",
  "panels": [
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 80}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "id": 1,
      "title": "Total Devices",
      "type": "stat",
      "targets": [
        {
          "expr": "count(up{namespace=\"webscada-dev\"})",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "id": 2,
      "title": "Online Devices",
      "type": "stat",
      "targets": [
        {
          "expr": "count(up{namespace=\"webscada-dev\"} == 1)",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "id": 3,
      "title": "Offline Devices",
      "type": "stat",
      "targets": [
        {
          "expr": "count(up{namespace=\"webscada-dev\"} == 0)",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "id": 4,
      "title": "Device Availability",
      "type": "gauge",
      "targets": [
        {
          "expr": "(count(up{namespace=\"webscada-dev\"} == 1) / count(up{namespace=\"webscada-dev\"})) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
      "id": 5,
      "title": "Device Status Over Time",
      "type": "graph",
      "targets": [
        {
          "expr": "up{namespace=\"webscada-dev\"}",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 18},
      "id": 6,
      "title": "Request Rate by Service",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{namespace=\"webscada-dev\"}[5m])",
          "legendFormat": "{{service}} - {{method}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 18},
      "id": 7,
      "title": "Error Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{namespace=\"webscada-dev\",status=~\"5..\"}[5m])",
          "legendFormat": "{{service}} - {{status}}",
          "refId": "A"
        }
      ]
    }
  ]
}
