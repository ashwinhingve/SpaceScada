{
  "annotations": {
    "list": []
  },
  "editable": true,
  "title": "WebSCADA - System Performance",
  "uid": "webscada-performance",
  "version": 1,
  "timezone": "browser",
  "panels": [
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "id": 1,
      "title": "CPU Usage by Pod",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace=\"webscada-dev\",container!=\"\"}[5m]) * 100",
          "legendFormat": "{{pod}} - {{container}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "id": 2,
      "title": "Memory Usage by Pod",
      "type": "graph",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{namespace=\"webscada-dev\",container!=\"\"}",
          "legendFormat": "{{pod}} - {{container}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "id": 3,
      "title": "Network I/O",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{namespace=\"webscada-dev\"}[5m])",
          "legendFormat": "RX: {{pod}}",
          "refId": "A"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{namespace=\"webscada-dev\"}[5m])",
          "legendFormat": "TX: {{pod}}",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "id": 4,
      "title": "Disk I/O",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(container_fs_reads_bytes_total{namespace=\"webscada-dev\"}[5m])",
          "legendFormat": "Read: {{pod}}",
          "refId": "A"
        },
        {
          "expr": "rate(container_fs_writes_bytes_total{namespace=\"webscada-dev\"}[5m])",
          "legendFormat": "Write: {{pod}}",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
      "id": 5,
      "title": "Pod Restart Count",
      "type": "graph",
      "targets": [
        {
          "expr": "kube_pod_container_status_restarts_total{namespace=\"webscada-dev\"}",
          "legendFormat": "{{pod}} - {{container}}",
          "refId": "A"
        }
      ]
    }
  ]
}
