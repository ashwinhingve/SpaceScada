# WebSCADA Frontend Environment Variables

# API and WebSocket URLs
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_WEBSOCKET_URL=http://localhost:3002

# Google Maps API Key for GIS Module
# Get your API key from: https://console.cloud.google.com/google/maps-apis
# Required APIs: Maps JavaScript API, Places API, Geometry API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Application Settings
NEXT_PUBLIC_APP_NAME=WebSCADA
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_METRICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_GIS=true

# Development
NEXT_PUBLIC_DEBUG=false
