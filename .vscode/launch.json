{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/apps/backend/src/index.ts",
      "preLaunchTask": "npm: build - apps/backend",
      "outFiles": ["${workspaceFolder}/apps/backend/dist/**/*.js"],
      "envFile": "${workspaceFolder}/apps/backend/.env.local"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Simulator",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/apps/simulator/src/index.ts",
      "preLaunchTask": "npm: build - apps/simulator",
      "outFiles": ["${workspaceFolder}/apps/simulator/dist/**/*.js"],
      "envFile": "${workspaceFolder}/apps/simulator/.env.local"
    }
  ]
}
